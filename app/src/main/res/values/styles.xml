<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize Theme Here -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>
    </style>

                 <!--new style is created here-->
    <style name="NewFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/cafe_font</item>
    </style>

    <style name="ThemeOverlay.Search" parent="AppTheme">
        <!-- Customize Theme Here -->
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/hintTextColor</item>

    </style>
    <!-- Splashscreen -->
    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

</resources>